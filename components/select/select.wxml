<view class="select-box">
  <view class="select-current" catchtap="openClose">
    <view class="{{!isShow?'isFold':'notFold'}}"></view>
    <text class="current-name">{{current.name}}</text>
  </view>
  <view class="option-list" wx:if="{{isShow}}" catchtap="optionTap">
    <text class="option"
      data-id="{{defaultOption.id}}"
      data-name="{{defaultOption.name}}">{{defaultOption.name}}
    </text>
    <text class="option {{item.children ? 'hasChildren' : 'noHasChildren'}} {{item.isChild? 'isChild' : 'notChild'}} {{item.children && flagList[index] ? 'isFoldFather' : 'notFoldFather' }}"
      wx:for="{{result}}"
      wx:key="{{item.id}}"
      data-id="{{item.id}}"
      data-name="{{item.name}}"
      data-children="{{item.children}}"
      data-index="{{index}}"
      >{{item.name}}
    </text>
    
  </view>
</view>
