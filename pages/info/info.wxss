/* pages/info/info.wxss */


.flexItem{
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    justify-content: space-between;
    height: 100rpx;
    border-top: 1px solid #ddd;
}

.flexItemLeft{
    flex: 1 0 60%;
    height: 100rpx;
    line-height: 100rpx;
    padding-left: 50rpx;

}

.height200{
    height: 200rpx;
}

.flexItemRight{
    flex: 1 0 20%;
    height: 100rpx;
    line-height: 100rpx;
    text-align: left;
    padding-right: 70rpx;
}
.userinfo-avatar{
    flex: none;
    width: 140rpx;
    height: 140rpx;
    border-radius: 50%;
    margin-right: 95rpx;
    padding: 0;
}
.pageBottom{
    position: fixed;
    bottom:60rpx;
    border-radius: 85rpx;
    left: 50%;
    transform: translateX(-50%);
}

.inputClass{
    width: 100%;
    height: 100%;
}

.floatLeft{
    float: left;
}
.floatRight{
    float:right
}

.editable{
    font-weight: bold;
}


.flexItemRight button{
    width: 180rpx !important;
    font-size: inherit;
    font-weight: inherit;
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    left: 0;
}

.flexItemRightBt{
    position: relative;
}

.linkText{
    color: cornflowerblue;
}

.danger{
    color: red;
}
