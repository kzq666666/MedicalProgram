<!--pages/info/info.wxml-->
<view class="flexBox">
    <view class="flexItem height200">
        <text class="flexItemLeft">头像</text>
        <image class="userinfo-avatar flexItemRight" src="{{userInfo.imageUrl}}" mode="cover"></image>
    </view>
    <view class="flexItem">
        <text class="flexItemLeft">姓名</text>
        <input type="text" value="{{userInfo.nickName}}" class="inputClass flexItemRight" bindinput="bindinputVal"></input>
    </view>
    <view class="flexItem">
        <text class="flexItemLeft">性别</text>
        <picker bindchange="bindPickerChange" class="flexItemRight" value="{{userInfo.gender}}" range="{{genderArray}}">
            <view class="picker">
                {{genderArray[userInfo.gender]}}
            </view>
        </picker>
    </view>
    <view class="flexItem">
        <text class="flexItemLeft">类型</text>
        <input type="text" value="{{type}}" class="inputClass flexItemRight" bindinput="bindinputVal" disabled></input>
    </view>
    <block wx:if="{{type=='患者'}}">

        <view class="flexItem">
            <text class="flexItemLeft">主治医生</text>
            <picker class="flexItemRight" bindchange="changeDoctor" value="{{index}}" range="{{doctorName}}">
                <view class="picker">
                    {{doctorName[index]}}
                </view>
            </picker>
        </view>
    </block>

</view>

<button class="pageBottom" type="primary" bindtap="submitEditInfo">保存</button>