.loginPage{
  display: flex;
  justify-content:center;
  align-items: center;
  width:100%;
  height: 400rpx;
}

.firstBtn{
  margin-bottom: 20px;
}

.personPage{
  padding: 30rpx;
  height: 500rpx;
}

.personalInfo{
  width: 100%;
  height: 228rpx;
  background-color: #fff;
  box-shadow: 5px 5px 5px gainsboro; 
  display: flex;
}

.userinfo-avatar{
  overflow: hidden;
  flex-basis: 128rpx;
  height: 128rpx;
  margin: 50rpx;
  border-radius: 50%;
}

.rightCon{
  flex:1;
  display: flex;
  flex-direction: column;
  padding-top: 53rpx;
  padding-right: 40rpx;
}
.nickName{
  position: relative;
  font-size: 32rpx;
  font-weight: bold;
}
.nickName:after{
  content: '';
  position: absolute;
  right: 0;
  width: 18rpx;
  height: 18rpx;
  border-top: 1px solid #656565;
  border-right: 1px solid #656565;
  transform: rotate(45deg);
  top: 50%;
  margin-top: -9rpx;
}
.type{
  margin-top: 10rpx;
  color: #FF716D;
  border-bottom: 1px solid #ddd;
  padding-right: 5rpx;
}

.moduleContainer{
  margin-top: 30rpx;
  display: flex;
  flex-wrap: wrap;
}
.moduleItem{
  flex: 1 0 40%;
  height: 200rpx;
  margin: 10rpx;
  background-color: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}

.centerWrap{
  margin-top: 88rpx;
  text-align: center;
}
.loginOutText{
  color: rgb(219, 122, 122);
  font-size: 30rpx;
}


