<!--pages/register/register.wxml-->
<view class="register">
  <form>
    <view class="formItem">
      <text class="label">头像</text>
      <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" mode="cover"></image>
    </view>
    <view class="formItem">
      <text class="label">姓名</text>
      <input type="text" class="input" value="{{userInfo.nickName}}" bindinput="valueChange" data-label="nickName"></input>
    </view>
    <view class="formItem">
      <text class="label">性别</text>
      <picker bindchange="bindPickerChange" value="{{userInfo.gender}}" range="{{genderArray}}">
        <view class="picker">
          {{genderArray[userInfo.gender]}}
        </view>
      </picker>
    </view>
    <block wx:if="{{type=='患者'}}">
      <view class="formItem">
        <text class="label">患者病号</text>
        <input type="text" class="input" value="{{userInfo.patientNumber}}" bindinput="valueChange" data-label="patientNumber"></input>
      </view>
      
      <view class="formItem">
        <text class="label">主治医生</text>
        <picker class="flexItemRight" bindchange="changeDoctor" value="{{index}}" range="{{doctorName}}">
                <view class="picker">
                    {{doctorName[index]}}
                </view>
            </picker>
      </view>
    </block>

    <view class="formItem">
      <text class="label">类型</text>
      <input type="text" class="input" value="{{type}}" disabled></input>
    </view>

    <button type="primary" bindtap="submitRegister">注册</button>
  </form>


</view>